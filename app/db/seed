<?php

if(strpos($argv[1], 'make') !== false) {

    $make = explode(':', $argv[1]);
    $content = file_get_contents(__DIR__.'/Examples/SeederExample');
    $content = str_replace('CLASSNAME', $make[1], $content);
    file_put_contents(__DIR__.'/Structure/'.$make[1].'.php', '<?php ' . $content);

} else {

    require_once __DIR__ . '/Architecture/Seeder.php';
    require_once __DIR__ . '/Architecture/Core.php';
    new \App\Db\Architecture\Seeder($argv[1]);

}
