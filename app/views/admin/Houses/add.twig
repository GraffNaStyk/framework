{% import 'components/form.twig' as form %}
{% import 'components/headline.twig' as headline %}
{% block content %}
  <form data-action="/houses/store" method="post">
    <div class="modal-header">
      <h5 class="modal-title">Dodaj mieszkanie</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="form__grid">
        {{ form.input({
          type: 'text',
          name: 'name',
          label: 'Nazwa',
          value: ''
        }) }}
        {{ form.input({
          type: 'text',
          name: 'price',
          label: 'Cena'
        }) }}
        {{ form.input({
          type: 'text',
          name: 'own_contribution',
          label: 'Wkłd własny'
        }) }}
        {{ form.input({
          type: 'text',
          name: 'advance',
          label: 'Zaliczka'
        }) }}
        {{ form.input({
          type: 'text',
          name: 'budget',
          label: 'Budżet'
        }) }}
      </div>
    </div>
    {{ form.csrf('Houses@store') }}
    <div class="modal-footer">
      {{ form.submit({value: 'Zapisz', class: 'btn-outline-success'}) }}
    </div>
  </form>
{% endblock %}
