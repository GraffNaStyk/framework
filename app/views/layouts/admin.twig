<!DOCTYPE html>
<html lang="pl">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="url" content="{{ url() }}">
  <link rel="shortcut icon" href="data:image/x-icon;" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,600" rel="stylesheet">
  <title>{{ page.title }}</title>
  {% for module in css %}
    {{ module|raw }}
  {% endfor %}
</head>
<body>
{% if devTool %}
  {{ devTool|raw }}
{% endif %}
<nav class="navbar navbar-expand-lg top__nav justify-content-between">
  <a href="{{ route('Dash@index') }}" class="logo">DASHBOARD</a>

  <div class="d-flex align-items-center">
    <a href="#" class="menu__burger"><i class="fa fa-bars"></i></a>
    <a href="{{ route('Dash@index') }}" {{ tooltip('settings') }} ><i class="fa fa-cog"></i></a>
    <a href="#" {{ tooltip('profile') }}><i data-menu="toggle" data-target="#menu" class="fa fa-user"></i></a>

    <div class="box__menu flex-column d-none" id="menu">
      <div class="render" data-url="password" data-el="modal">Resetuj hasło</div>
      <a href="{{ route('Dash@index') }}">Mój profil</a>
    </div>

    <a href="{{ route('Logout@index') }}" {{ tooltip('logout') }}> <i class="fa fa-power-off"></i> </a>

  </div>
</nav>

<section class="grid">

  <aside class="left-panel d-flex">
    {% include 'layouts/inc/left-menu.twig' %}
  </aside>

  <main class="right-panel">
    {% include 'layouts/inc/alert.twig' %}
    {% block content %}
    {% endblock %}
  </main>
</section>

{% include 'components/modal.twig' %}
{% for module in js %}
  {{ module|raw }}
{% endfor %}
</body>
</html>
