{% extends layout %}

{% block content %}
  <div class="card card-body">
    <form action="{{ url }}Realizations/save" method="post" enctype="multipart/form-data">
      <input
       class="form-control my-2"
       type="text" name="title"
       placeholder="TytuÅ‚"
       value="{{ title }}">
      <input
