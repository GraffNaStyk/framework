{% extends layout %}
{% block content %}
  <section class="box d-flex flex-column p-3">
    <h3 class="text-center">Podstawowe konfiguracje strony</h3>
    <form method="post" data-action="appearance/store">
      <div class="form__grid">
        {{ input({
          type: 'text',
          class: 'form-control',
          name: 'name',
          label: 'Nazwa',
          value: config.name
        }) }}

        {{ input({
          class: 'form-control',
          name: 'description',
          label: 'Opis',
          value: config.description
        }) }}

        {{ input({
          class: 'form-control',
          name: 'keywords',
          label: 'SÅ‚owa klucze',
          value: config.keywords
        }) }}
      </div>
      {{ input({
        type: 'submit',
        value: 'Zapisz',
        class: 'mt-3'
      }) }}
    </form>
  </section>
{% endblock %}
