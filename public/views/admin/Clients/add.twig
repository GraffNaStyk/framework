{% extends layout %}
  {% import 'components/form.twig' as form %}
{% block content %}
<div class="box">
  <h3>Dodaj klienta mordo</h3>
  <form method="post" data-action="clients/store">
    <div class="form__grid">
      {{ form.input({
        type: 'text',
        name: 'name',
        label: 'Nazwa',
        value: 'dddfffffff'
      }) }}
      {{ form.input({
        type: 'text',
        name: 'www',
        label: 'Strona'
      }) }}
      {{ form.input({
        type: 'text',
        name: 'ftp_server',
        label: 'Server ftp'
      }) }}
      {{ form.input({
        type: 'text',
        name: 'ftp_user',
        label: 'User ftp'
      }) }}
      {{ form.input({
        type: 'password',
        name: 'ftp_password',
        label: 'Ftp Password'
      }) }}
      {{ form.input({
        type: 'text',
        name: 'db_link',
        label: 'Link do bazy'
      }) }}
      {{ form.input({
        type: 'text',
        name: 'db_user',
        label: 'User db'
      }) }}
      {{ form.csrf() }}
    </div>
    {{ form.input({
      type: 'submit',
      value: 'Zapisz',
      class: 'mt-3'
    }) }}
  </form>
</div>

{% endblock %}
