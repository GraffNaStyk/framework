{% extends layout %}

{% block content %}
<div class="box">
  <h3>Dodaj klienta mordo</h3>
  <form method="post" data-action="clients/store">
    <div class="form__grid">
      {{ input({
        type: 'text',
        class: 'form-control',
        name: 'name',
        label: 'Nazwa'
      }) }}
      {{ input({
        type: 'text',
        class: 'form-control',
        name: 'www',
        label: 'Strona'
      }) }}
      {{ input({
        type: 'text',
        class: 'form-control',
        name: 'ftp_server',
        label: 'Server ftp'
      }) }}
      {{ input({
        type: 'text',
        class: 'form-control',
        name: 'ftp_user',
        label: 'User ftp'
      }) }}
      {{ input({
        type: 'password',
        class: 'form-control',
        name: 'ftp_password',
        label: 'Ftp Password'
      }) }}
      {{ input({
        type: 'text',
        name: 'db_link',
        class: 'form-control',
        label: 'Link do bazy'
      }) }}
      {{ input({
        type: 'text',
        name: 'db_user',
        class: 'form-control',
        label: 'User db'
      }) }}
      {{ input({
        type: 'password',
        name: 'db_password',
        class: 'form-control',
        label: 'Has≈Ço bazy'
      }) }}
      {{ input({
        type: 'text',
        class: 'form-control',
        name: 'db_name',
        label: 'Nazwa bazy'
      }) }}
    </div>
    {{ input({
      type: 'submit',
      value: 'Zapisz',
      class: 'mt-3'
    }) }}
  </form>
</div>

{% endblock %}
