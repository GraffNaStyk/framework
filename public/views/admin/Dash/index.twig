{% extends layout %}

{% block content %}
<div class="box">
  <h3>Welcome in dashboard</h3>
  <button class="render" data-url="dash/modal" data-el="modal">Modal</button>
  <button class="render" data-url="dash/modal" data-el="cycuszki">Component</button>
  <div data-component="cycuszki"></div>
  {{ select({
    name: 'user',
    url: 'dupa/jasiu',
    label: 'Wybierz pracownika'
  }) }}
  <form data-action="dash/upload">
   <div class="form__grid">
     {{ input({
       type: 'file',
       name: 'file'
     }) }}
     {{ input({
       label: 'text',
       placeholder: 'text',
       class: 'form-control',
       type: 'text',
       name: 'user[name]'
     }) }}
     {{ input({
       label: 'tttt',
       class: 'form-control',
       type: 'text',
       name: 'user[surname]'
     }) }}
   </div>
    {{ input({
      type: 'submit',
      value: 'Zapisz',
      class: 'mt-3'
    }) }}
  </form>
</div>
{% endblock %}
